<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trocket.roomme.ProfileFragment"
    android:weightSum ="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="203dp"
            android:layout_gravity="center_horizontal"
            android:background="#0B61A4">

            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:id="@+id/fp_user_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                bootstrap:bct_size="large"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingLeft="10sp"
                android:textSize="30sp"
                android:text="TESTINGTESITg"
                android:textColor="#FFFFFF"
                android:id="@+id/fp_name"
                android:layout_below="@+id/fp_user_picture"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/fp_bio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:textSize="18sp"
                    android:textColor="#343434"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Housing Info"
                    android:id="@+id/staticHousingInfo"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    />

                <TextView
                    android:id="@+id/fp_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:textColor="#343434"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/fp_housingPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:textColor="#343434"
                    android:textSize="18sp"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Info"
                    android:id="@+id/staticContactInfo"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    />

                <TextView
                    android:id="@+id/fp_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:textColor="#343434"
                    android:textSize="18sp"
                    />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to List"
                        android:id="@+id/fp_addToList"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FB msg"
                        android:id="@+id/fp_fbMSG"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>


</FrameLayout>
